# Vercel Environment Variables
# Copy these to your Vercel project dashboard under Settings > Environment Variables

# MongoDB Connection (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/farmease?retryWrites=true&w=majority

# Groq API Key for AI features (REQUIRED for AI chat)
GROQ_API_KEY=your_groq_api_key_here

# Weather API (optional - for weather features)
OPENWEATHER_API_KEY=your_openweather_api_key

# Plant.id API (optional - for disease detection)
PLANT_ID_API_KEY=your_plant_id_api_key

# Node environment
NODE_ENV=production
